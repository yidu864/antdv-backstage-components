{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "types": [
      "node",
      "webpack-env",
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    // "packages/*/src/**/*.ts",
    // "packages/*/es/**/*.ts",
    // "packages/*/src/**/*.tsx",
    // "packages/*/src/**/*.vue",
    // "packages/**/*.vue",
    "scripts/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}